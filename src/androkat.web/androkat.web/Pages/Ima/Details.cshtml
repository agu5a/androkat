@page "{nid}"
@using androkat.web.Pages.Ima;
@model DetailsModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@section meta_extra {
    <meta property="og:title" content="@(Model.ImaModel.Cim.Replace("\"", "'"))" />
    <meta property="og:site_name" content="Android és Katolikus: AndroKat a weben"/>
    <meta property="og:description" content="@(Model.ImaModel.Cim.Replace("\"", "'"))" />
    <meta itemprop="name" content="@(Model.ImaModel.Cim.Replace("\"", "'"))" />
    <meta itemprop="description" content="@(Model.ImaModel.Cim.Replace("\"", "'"))" />
}

<div class="container bg-white" style="padding: 15px;">

    <div class="mb-4" style="border-radius: 0.25rem;padding: 15px;background-color: #ffffff;">
        <strong>Imák szűrése forrás szerint</strong>:<br /> <a href="/ima">Összes</a> ||

        @foreach (var item in Model.ImaCsoportok)
        {
            var css = !string.IsNullOrWhiteSpace(Model.ImaModel.Csoport) && Model.ImaModel.Csoport == item.Value ? "class=\"bg-success text-white p-1\"" : "";
            <a href="/ima/@(item.Value)" @Html.Raw(css)>@(item.Key)</a> @("||")            
        }
    </div>

    <div class="p-3 border bg-light" style="border-radius: 0.25rem;">
        <h3>@(Model.ImaModel.Cim)</h3>        
        <div style="margin: 0 0 15px 0;">
           @Html.Raw(Model.ImaModel.Szoveg) 
        </div>
        <div id="sharedLink">

        <a rel = "nofollow" title="@(Model.ShareUrl)" target="_blank"
        href="http://www.facebook.com/sharer.php?u=@(Model.EncodedUrl)&amp;t=androkat.hu+-+@(Model.ShareTitle)">
		<img alt="" src="~/images/facebook.png"></a>

        <a rel = "nofollow" title="@(Model.ShareUrl)" target="_blank"
               href="http://x.com/share?url=@(Model.EncodedUrl)&amp;via=androkat&amp;text=@(Model.ShareTitle)">
		<img alt="" src="~/images/x.png"></a>

		</div>
    </div>
</div>