@page
@using androkat.web.Pages
@model HanganyagModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container bg-white" style="padding: 15px;">
    @{
    var index = 0;
    var vege = false;
  } 
    @foreach (var model in Model.AudioModels)
    {
        vege = false;
        @if(index == 0)
        {
          @:<div class="row mb-1">
        }

        <div class="col-sm-4">
        <div class="card h-100"><div class="card-body">    
            <div class="myclearfix">
                <img data-src="~/@(model.MetaDataModel.Image)" class="mr-2 rounded" style="width: 80px; height: 80px;float: left;margin-right:8px;margin-bottom:8px;" 
                src="~/@(model.MetaDataModel.Image)" data-holder-rendered="true" alt="hanganyag">
                @Html.Raw("<h5>" + model.Cim + "</h5>")
                <p>
                    <a href="@(model.MetaDataModel.Link)">@(model.MetaDataModel.TipusNev)</a>              
                </p>
            </div>
            <div>
                @Html.Raw(model.Idezet) 
            </div>
        </div></div></div>

        @if(index == 2)
        {
            @:</div>

            index = 0;
            vege = true;
        }
        else { index++; }            
} 

@if(!vege) 
    { 
        @:</div>
    }

</div>