@page "/"
@using androkat.web.Pages
@model IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container bg-white" style="padding: 15px;">
  @{
    var index = 0;
    var vege = false;
  }  
    @foreach (var p in Model.ContentModels)
    {
        vege = false;
        @if(index == 0)
        {
          @:<div class="row mb-1">
        }

      <div class="col-sm-4"><div class="card h-100"><div class="card-body">
        <a href="details/@(p.ContentDetails.Nid)/@((int)p.MetaData.TipusId)" class="navlink">
            <img data-src="~/@(p.MetaData.Image)" class="mr-2 rounded" 
                style="width: 80px; height: 80px;float: left;margin-right:8px;margin-bottom:8px;" src="~/@(p.MetaData.Image)" data-holder-rendered="true" alt="logo">
            @Html.Raw("<h5>" + p.ContentDetails.Cim + "</h5>")
            <p>
                @Html.Raw(p.MetaData.TipusNev+ "<br>" + p.ContentDetails.Fulldatum.ToString("MM-dd"))                
           </p>
       </a>
       </div></div></div>

       @if(index == 2)
       {
            @:</div>

            index = 0;
            vege = true;         
        }
        else { index++; }
    } 
    
    @if(!vege) 
    { 
        @:</div>
    }       

</div> 