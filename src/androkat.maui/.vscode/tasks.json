{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "build",
			"command": "dotnet",
			"args": [
				"build",
				"--configuration",
				"Debug"
			],
			"group": "build",
			"presentation": {
				"reveal": "silent"
			},
			"problemMatcher": "$msCompile",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"type": "shell",
			"label": "build-android",
			"command": "dotnet",
			"args": [
				"build",
				"androkat.maui/androkat.maui.csproj",
				"--configuration",
				"Debug",
				"--framework",
				"net9.0-android"
			],
			"group": "build",
			"presentation": {
				"reveal": "always"
			},
			"problemMatcher": "$msCompile",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"type": "shell",
			"label": "run-android",
			"command": "dotnet",
			"args": [
				"build",
				"androkat.maui/androkat.maui.csproj",
				"--configuration",
				"Debug",
				"-t:Run",
				"-f",
				"net9.0-android"
			],
			"group": "build",
			"presentation": {
				"reveal": "always"
			},
			"problemMatcher": "$msCompile",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"type": "shell",
			"label": "clean",
			"command": "dotnet",
			"args": [
				"clean"
			],
			"group": "build",
			"presentation": {
				"reveal": "silent"
			},
			"problemMatcher": "$msCompile",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		}
	]
}