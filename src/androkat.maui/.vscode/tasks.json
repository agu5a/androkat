{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/androkat.maui/androkat.maui.csproj",
				"--configuration",
				"Debug",
				"-t:Run",
				"-f",
				"net9.0-android",
				"/p:AndroidDevice=True"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "publish-android-aab",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"publish",
				"-f",
				"net9.0-android",
				"-c",
				"Release",
				"-p:AndroidPackageFormat=aab"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": "$msCompile"
		}
	]
}