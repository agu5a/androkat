<?xml version="1.0" encoding="utf-8" ?>
<mct:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
           xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
           xmlns:mct="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
           x:Class="androkat.hu.Views.FilterView"
           CanBeDismissedByTappingOutsideOfPopup="False"
           Size="300, 300">
    <VerticalStackLayout Spacing="20" BackgroundColor="{AppThemeBinding Light={StaticResource Cardviewback}, Dark={StaticResource CardviewbackDark}}"
           Padding="20">
        <HorizontalStackLayout Spacing="10">
            <CheckBox x:Name="ShowVisitedCheckbox" />
            <Label Text="Show visited items"
                       VerticalOptions="Center" />
        </HorizontalStackLayout>
        <Button Text="Bezárás" 
                    Clicked="OnApplyClicked"
                    HorizontalOptions="End" />
    </VerticalStackLayout>
</mct:Popup>
