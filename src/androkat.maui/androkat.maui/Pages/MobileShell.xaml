<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:pages="clr-namespace:androkat.hu.Pages"
       xmlns:root="clr-namespace:androkat.hu"
       xmlns:viewmodels="clr-namespace:androkat.hu.ViewModels"
       x:DataType="viewmodels:ShellViewModel"
       x:Class="androkat.hu.Pages.MobileShell">
    <TabBar>
        <Tab Title="{Binding Discover.Title}"
             Icon="{Binding Discover.Icon}">
            <ShellContent ContentTemplate="{DataTemplate pages:DiscoverPage}" />
        </Tab>       
    </TabBar>
</Shell>